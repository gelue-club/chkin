{
  "name": "chkin",
  "main": "./electron-starter.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "npx prettier --write \"**/*.{js,jsx,json,md}\"",
    "pack": "npx electron-builder --dir",
    "dist": "npx electron-builder --macos --linux --windows"
  },
  "build": {
    "productName": "Chkin",
    "files": [
      "build/**/*",
      "electron-starter.js",
      "package.json"
    ],
    "extends": null,
    "appId": "com.company.AppName",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 100,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  },
  "engines": {
    "node": ">=10.16.3"
  },
  "git": {
    "core.editor": "code"
  },
  "gitignore": [
    "macOS",
    "Windows",
    "Linux",
    "Node",
    "VisualStudioCode",
    "SublimeText",
    "CVS",
    "Diff",
    "Vim",
    "TortoiseGit",
    "Diff",
    "Patch"
  ],
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "version": "0.1.0",
  "description": "扫码签到客户端。",
  "keywords": [],
  "author": {
    "name": "iyowei",
    "email": "swzyocowboy@icloud.com",
    "url": "https://github.com/iTonyYo"
  },
  "repository": {
    "url": "git@github.com:gelue-club/chkin.git",
    "type": "git"
  },
  "homepage": "./",
  "bugs": "https://github.com/gelue-club/chkin/issues",
  "dependencies": {
    "classnames": "^2.2.6",
    "foreman": "^3.0.1",
    "formik": "^2.0.1",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-helmet": "^5.2.1",
    "react-scripts": "3.2.0",
    "store": "^2.0.12",
    "xlsx": "^0.15.1"
  },
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^21.2.0",
    "prettier": "^1.18.2"
  }
}
